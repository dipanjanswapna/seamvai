generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  CUSTOMER
  KITCHEN_OWNER
  ADMIN
}

enum OrderStatus {
  PENDING
  COOKING
  DELIVERED
}

model User {
  id    String   @id @default(cuid())
  name  String
  phone String   @unique
  email String   @unique
  role  UserRole @default(CUSTOMER)

  kitchens Kitchen[]
  orders   Order[]

  @@map("users")
}

model Kitchen {
  id          String    @id @default(cuid())
  name        String
  description String?
  logo        String?
  address     String
  ownerId     String

  owner     User       @relation(fields: [ownerId], references: [id])
  menuItems MenuItem[]
  orders    Order[]

  @@map("kitchens")
}

model MenuItem {
  id          String  @id @default(cuid())
  name        String
  price       Float
  description String?
  image       String?
  kitchenId   String

  kitchen Kitchen @relation(fields: [kitchenId], references: [id])

  @@map("menu_items")
}

model Order {
  id         String     @id @default(cuid())
  userId     String
  kitchenId  String
  totalPrice Float
  status     OrderStatus @default(PENDING)
  createdAt  DateTime   @default(now())

  user    User    @relation(fields: [userId], references: [id])
  kitchen Kitchen @relation(fields: [kitchenId], references: [id])

  @@map("orders")
}
